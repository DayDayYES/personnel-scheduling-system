i>{{user.sex==1?\"男\":\"女\"}} </el-tag>\r\n      </el-descriptions-item>\r\n      <el-descriptions-item>\r\n        <template slot=\"label\">\r\n          <i class=\"el-icon-tickets\"></i>\r\n          角色\r\n        </template>\r\n        <el-tag type=\"success\" disable-transitions>{{user.roleId==0?\"超级管理员\":(user.roleId==1?\"管理员\":\"用户\")}}</el-tag>\r\n      </el-descriptions-item>\r\n    </el-descriptions>\r\n\r\n    <DateUtils style=\"margin-top: 15px\"></DateUtils>\r\n  </div>\r\n</template>\r\n\r\n<style scoped>\r\n\r\n</style>"],"mappings":"AACA,OAAAA,SAAA;AACA;EACAC,IAAA;EACAC,UAAA;IAAAF;EAAA;EACAG,KAAA;IACA;MACAC,IAAA;IACA;EACA;EACAC,QAAA,GAEA;EACAC,OAAA;IACAC,KAAA;MACA,KAAAH,IAAA,GAAAI,IAAA,CAAAC,KAAA,CAAAC,cAAA,CAAAC,OAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAL,IAAA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}